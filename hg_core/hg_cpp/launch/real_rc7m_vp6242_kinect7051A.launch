<launch>	
  <!-- Kinect -->
  <include file="$(find openni_launch)/launch/openni.launch">
  	<arg name="camera" value="kinect7051A" />
    <arg name="device_id" value="A00363807157051A" />
  </include>
    
  <!-- RC7M -->
  <node name="arm1" pkg="hg_cpp" type="hg_ros" output="screen">
    <param name="simulate" value="false"/>
    <param name="loop_rate" value="50.0"/>
    <param name="joint_publish_rate" value="10.0"/>
    <param name="diagnostic_publish_rate" value="10.0"/>
      
    <rosparam file="$(find rc7m)/parameters/vp6242.yaml" command="load" />
    <param name="robot_description" textfile="$(find vp6242_description)/robot/vp6242.urdf" />    
  </node>
  
  <node pkg="robot_state_publisher" type="state_publisher" name="rob_st_pub" >
      <remap from="robot_description" to="/arm1/robot_description" />
      <!--remap from="joint_states" to="/arm1/joint_states" /-->
  </node>
  
  <node pkg="tf" type="static_transform_publisher" name="table_broadcaster" 
  args="-0.8013312048757147 -0.4705600194028853 1.879842401563593 1.580096886 -0.16322015961780161 3.210146698 kinect7051A_rgb_optical_frame table 100" />
  
  <node pkg="tf" type="static_transform_publisher" name="arm1_broadcaster" 
  args="0.10 0.67 0.00 0 0 0 table base_link 100" />
	
  <node pkg="rviz" type="rviz" name="rviz">
      <remap from="robot_description" to="/arm1/robot_description" />
  </node>
  
    
</launch>
